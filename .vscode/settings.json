{
	"editor.tabSize": 3,
	"editor.autoIndent": "full",
	"editor.detectIndentation": true,
	"editor.insertSpaces": true,
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"package.json": "README.md,bun.lockb,package-lock.json,.eslintrc.json,.eslintrc.js,.prettierrc,tsconfig.json,.gitignore,firebase.json,credentials*.json",
		"*.tsx": "$(capture).bloc.ts,$(capture).test.tsx,$(capture).css,$(capture).scss",
		"main.tsx": "*env.d.ts,reportWebVitals.ts,setupTests.ts",
		"firebase.json": ".firebaserc,firestore.rules,firestore.indexes.json,database.rules.json,storage.rules"
	},
	"files.exclude": {
		"**/node_modules/": true
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"python.formatting.provider": "none"
}
